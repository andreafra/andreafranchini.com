	},
	{
		title: "Articles",
		url: "/articles",
		style: "hover:bg-red-300 active:bg-red-300",
	},
	{
		spacer: true,
	},
	{
		title: "GitHub",
		value: "@andreafra",
		url: "https://github.com/andreafra",
		style: "hover:bg-orange-300 active:bg-orange-300",
	},
	{
		title: "Linkedin",
		value: "/in/andreafranchini",
		url: "https://linkedin.com/in/andreafranchini",
		style: "hover:bg-cyan-300 active:bg-cyan-300",
	},
	{
		title: "Email",
		value: "hello@andreafranchini.com",
		url: "mailto:hello@andreafranchini.com",
		style: "hover:bg-pink-300 active:bg-pink-300",
	},
	{
		title: "Work Email",
		value: "andrea.franchini@polimi.it",
		url: "mailto:andrea.franchini@polimi.it",
		style: "hover:bg-yellow-300 active:bg-yellow-300",
	},
	{
		title: "CV • Resumé",
		value: "Download",
		url: "https://drive.proton.me/urls/TW5QY2VABM#EuN3sYR01aDg",
		style: "hover:bg-green-300 active:bg-green-300",
	},
