---

<header
	class="flex items-center w-full bg-black text-white gsap-header overflow-hidden fixed z-10 py-2 px-2 gap-2 md:gap-4"
>
	<a class="shrink-0" href="/">
		<h1 class="inline-block text-left text-xl font-bold justify-between">
			A
			<span class="hidden md:inline -ml-[2.8px]">ndrea</span>
			<span class="inline md:hidden">.</span>
			Franchini
		</h1>
	</a>
	<nav
		class="flex mt-0 pl-2 md:pl-0 md:inline-block overflow-x-auto whitespace-nowrap [scrollbar-width:none]"
	>
		<ul
			class="rounded-full overflow-x-auto whitespace-nowrap [scrollbar-width:none]"
		>
			{
				contactLinks.map((cl) =>
					cl.spacer ? (
						<span class="text-background mr-2">•</span>
					) : (
						<li
							class={`inline-block bg-background text-black pl-3 pr-1 py-1 rounded-full mr-2 ${cl.style}`}
						>
							<a href={cl.url}>
								{cl.title}{" "}
								<span class="inline-block bg-black w-6 text-center text-background rounded-full">
									→
								</span>
							</a>
						</li>
					)
				)
			}
		</ul>
	</nav>
</header>
